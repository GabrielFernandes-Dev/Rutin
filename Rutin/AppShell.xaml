<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Rutin.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Rutin"
    xmlns:views="clr-namespace:Rutin.Views.Pages">

    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="CadastroPage" ContentTemplate="{DataTemplate views:CadastroPage}" />
    <ShellContent Route="NovaAtividadePage" ContentTemplate="{DataTemplate views:NovaAtividadePage}" />

    <TabBar>
        <Tab Title="Início" >
            <ShellContent Title="Pagina Inicial" Route="HomePage">
                <views:HomePage />
            </ShellContent>
        </Tab>
        <Tab Title="Atividades">
            <ShellContent Title="Pagina Inicial">
                <views:HomePage />
            </ShellContent>
        </Tab>
        <Tab Title="Notificações">
            <ShellContent Title="Pagina Inicial">
                <views:HomePage />
            </ShellContent>
        </Tab>
        <Tab Title="Perfil">
            <ShellContent Title="Pagina Inicial">
                <views:HomePage />
            </ShellContent>
        </Tab>
    </TabBar>    
</Shell>
